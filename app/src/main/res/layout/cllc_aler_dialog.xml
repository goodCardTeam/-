<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:clipChildren="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:background="@color/white"
        android:clipChildren="false">
    <ImageView
        android:id="@+id/iv_t_o"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_time_out"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-60dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time_out"
        android:textSize="18dp"
        android:textColor="@color/text_color_i"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/iv_t_o"
        android:layout_marginTop="14dp"
        />

    <LinearLayout
        android:id="@+id/ll_i"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/iv_t_o"
        android:layout_marginTop="60dp">

        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_ray_light"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@mipmap/icon_ray_light"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="光线充足"
                android:textColor="@color/text_color_ii"
                android:layout_below="@+id/iv_ray_light"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="9dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_phone"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@mipmap/icon_phone"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="正对手机"
                android:textColor="@color/text_color_ii"
                android:layout_below="@+id/iv_phone"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="9dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_cover"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@mipmap/icon_cover"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="去除遮挡"
                android:textColor="@color/text_color_ii"
                android:layout_below="@+id/iv_cover"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="9dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_slow_down"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@mipmap/icon_slow_down"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="放缓速度"
                android:textColor="@color/text_color_ii"
                android:layout_below="@+id/iv_slow_down"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="9dp"/>
        </RelativeLayout>

    </LinearLayout>


    <Button
        android:id="@+id/bt_close"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_below="@+id/ll_i"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="25dp"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/edit_shape2"
        android:text="我知道了"
        android:textSize="14dp"
        android:textColor="@color/white"/>

    </RelativeLayout>

</RelativeLayout>