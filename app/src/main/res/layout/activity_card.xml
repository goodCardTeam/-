<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.CardActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="@mipmap/bj_top">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">
            <ImageButton
                android:id="@+id/myBack"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@mipmap/arrow_left_w"/>
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/card_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:tabMode="scrollable"
                app:tabTextColor="@color/white_da"
                app:tabSelectedTextColor="@color/white"
                app:tabIndicatorColor="@android:color/transparent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的交易"
                android:padding="5dp"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

    </RelativeLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/card_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>