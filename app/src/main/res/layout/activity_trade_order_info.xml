<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".ui.activity.TradeOrderInfoActivity">
    <include layout="@layout/view_title_bar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/trade_order_info_commit">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:padding="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单号"
                        android:textColor="@color/gray_6"
                        android:textSize="13sp"/>
                    <TextView
                        android:id="@+id/trade_order_info_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0908045245252435"
                        android:layout_marginStart="8dp"
                        android:textColor="@color/gray_6"
                        android:textSize="13sp"/>
                    <ImageView
                        android:id="@+id/trade_order_info_copy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:src="@drawable/vector_drawable_copy"/>
                    <TextView
                        android:id="@+id/trade_order_info_status"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="已完成"
                        android:layout_marginStart="8dp"
                        android:textColor="@color/gray_6"
                        android:textSize="13sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="1dp"
                    android:padding="15dp"
                    android:background="@color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="买家"
                            android:textColor="@color/gray_6"
                            android:textSize="13sp"/>
                        <TextView
                            android:id="@+id/trade_order_info_buyer_name"
                            android:layout_width="0dp"
                            android:layout_weight="2.5"
                            android:layout_height="wrap_content"
                            android:text="13213580912"
                            android:textColor="@color/gray_3"
                            android:textSize="13sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="手机号"
                            android:textColor="@color/gray_6"
                            android:textSize="13sp"/>
                        <TextView
                            android:id="@+id/trade_order_info_buyer_tel"
                            android:layout_width="0dp"
                            android:layout_weight="2.5"
                            android:layout_height="wrap_content"
                            android:text="13213580912"
                            android:textColor="@color/gray_3"
                            android:textSize="13sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="数量"
                            android:textColor="@color/gray_6"
                            android:textSize="13sp"/>
                        <TextView
                            android:id="@+id/trade_order_info_buyer_number"
                            android:layout_width="0dp"
                            android:layout_weight="2.5"
                            android:layout_height="wrap_content"
                            android:text="13213580912"
                            android:textColor="@color/gray_3"
                            android:textSize="13sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="单价(CNY)"
                            android:textColor="@color/gray_6"
                            android:textSize="13sp"/>
                        <TextView
                            android:id="@+id/trade_order_info_buyer_price"
                            android:layout_width="0dp"
                            android:layout_weight="2.5"
                            android:layout_height="wrap_content"
                            android:text="13213580912"
                            android:textColor="@color/gray_3"
                            android:textSize="13sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="订单金额(CNY)"
                            android:textColor="@color/gray_6"
                            android:textSize="13sp"/>
                        <TextView
                            android:id="@+id/trade_order_info_buyer_total"
                            android:layout_width="0dp"
                            android:layout_weight="2.5"
                            android:layout_height="wrap_content"
                            android:text="300"
                            android:textColor="@color/hint_yellow"
                            android:textSize="13sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="下单时间"
                            android:textColor="@color/gray_6"
                            android:textSize="13sp"/>
                        <TextView
                            android:id="@+id/trade_order_info_buyer_time"
                            android:layout_width="0dp"
                            android:layout_weight="2.5"
                            android:layout_height="wrap_content"
                            android:text="2020-01-01"
                            android:textColor="@color/gray_3"
                            android:textSize="13sp"/>
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="收款信息"
                    android:textSize="14sp"
                    android:textColor="@color/gray_6"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="1dp"
                    android:padding="15dp"
                    android:background="@color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="收款方式"
                            android:textColor="@color/gray_6"
                            android:textSize="13sp"/>
                        <TextView
                            android:id="@+id/trade_order_info_sell_pay"
                            android:layout_width="0dp"
                            android:layout_weight="2.5"
                            android:layout_height="wrap_content"
                            android:text="支付宝"
                            android:textColor="@color/gray_3"
                            android:textSize="13sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="卖家"
                            android:textColor="@color/gray_6"
                            android:textSize="13sp"/>
                        <TextView
                            android:id="@+id/trade_order_info_sell_name"
                            android:layout_width="0dp"
                            android:layout_weight="2.5"
                            android:layout_height="wrap_content"
                            android:text="13213580912"
                            android:textColor="@color/gray_3"
                            android:textSize="13sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="收款人姓名"
                            android:textColor="@color/gray_6"
                            android:textSize="13sp"/>
                        <TextView
                            android:id="@+id/trade_order_info_sell_real_name"
                            android:layout_width="0dp"
                            android:layout_weight="2.5"
                            android:layout_height="wrap_content"
                            android:text="***"
                            android:textColor="@color/gray_3"
                            android:textSize="13sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="支付金额(CNY)"
                            android:textColor="@color/gray_6"
                            android:textSize="13sp"/>
                        <TextView
                            android:id="@+id/trade_order_info_sell_total"
                            android:layout_width="0dp"
                            android:layout_weight="2.5"
                            android:layout_height="wrap_content"
                            android:text="1000"
                            android:textColor="@color/hint_yellow"
                            android:textSize="13sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="付款时间"
                            android:textColor="@color/gray_6"
                            android:textSize="13sp"/>
                        <TextView
                            android:id="@+id/trade_order_info_sell_pay_time"
                            android:layout_width="0dp"
                            android:layout_weight="2.5"
                            android:layout_height="wrap_content"
                            android:text="2020-01-01"
                            android:textColor="@color/gray_3"
                            android:textSize="13sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="发放积分时间"
                            android:textColor="@color/gray_6"
                            android:textSize="13sp"/>
                        <TextView
                            android:id="@+id/trade_order_info_sell_f_time"
                            android:layout_width="0dp"
                            android:layout_weight="2.5"
                            android:layout_height="wrap_content"
                            android:text="2020-01-01"
                            android:textColor="@color/gray_3"
                            android:textSize="13sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <Button
            android:id="@+id/trade_order_info_commit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/edit_shape2"
            android:text="确定"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"/>
    </RelativeLayout>



</LinearLayout>